<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="sale_design_create_task_view_form" model="ir.ui.view">
        <field name="name">sale_design.create.task.view.form</field>
        <field name="model">sale_design.create_task</field>
        <field name="arch" type="xml">
            <form string="Create Design Task">
                <group>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="user_id"/>
                    <field name="date_deadline"/>
                </group>
                <footer>
                    <button string="Create Task" type="object" name="action_create_task" class="oe_highlight"/>
                    <button string="Cancel" special="cancel" type="object" class="btn btn-secondary oe_inline"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="sale_design_create_task_action" model="ir.actions.act_window">
        <field name="name">Create Task</field>
        <field name="res_model">sale_design.create_task</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sale_design_create_task_view_form"/>
        <field name="target">new</field>
    </record>

    <record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">sale_design.view_order_form_inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@id='action_confirm']" position="after">
                <button name="%(sale_design_create_task_action)d"
                        string="Create task" type="action"/>
            </xpath>

            <xpath expr="//button[@name='preview_sale_order']" position="before">
                <button class="oe_stat_button" name="action_view_tasks" type="object" icon="fa-signal"
                        help="Associated design tasks">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="design_task_count" widget="statinfo" nolabel="1" class="mr4"/>
                        </span>
                        <span class="o_stat_text">Design Tasks</span>
                    </div>
                </button>
            </xpath>

        </field>
    </record>

</odoo>
